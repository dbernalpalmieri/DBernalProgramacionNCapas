
@model ModelLayer.Usuario

@{
    ViewBag.Title = "Usuario Detalle";
    string url = "https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js";

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="@url" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>


<div class="container container-fluid">
    <h2>@ViewBag.Title</h2>

    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-square-fill"></i>
                <strong>@ViewBag.Message</strong>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <div>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Nombre)*@
                            Nombre Completo
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sexo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Celular)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Curp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaNacimiento)
                        </th>
                        <th>
                            Rol
                            @*@Html.DisplayNameFor(model => model.Rol.Nombre)*@
                        </th>
                        <th>Acciones</th>

                    </tr>
                </thead>
                <tbody>

                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.IdUsuario)
                            </td>*@
                        <td>
                            @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.ApellidoPaterno) @Html.DisplayFor(model => model.ApellidoMaterno)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>*@
                        <td>
                            @Html.DisplayFor(model => model.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Celular)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Curp)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FechaNacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Rol.Nombre)
                        </td>
                        @*<td class="visually-hidden">
                                @Html.DisplayFor(modelItem => item.Rol.IdRol)
                            </td>*@
                        <td>
                            <div class="d-flex justify-content-center align-items-center">
                                <button onclick="location.href = '@Url.Action("Form","Usuario", new { IdUsuario = Model.IdUsuario })';"
                                        class="btn btn-warning me-2" title="Editar">
                                    <i class="bi bi-pen"></i>
                                </button>
                                <a class="btn btn-danger bi bi-trash-fill" href="@Url.Action("Delete", "Usuario", new { IdUsuario = Model.IdUsuario })"
                                   onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
    <p>
        <div class="me-3">
            <a class="btn btn-danger bi bi-arrow-left-square-fill" href="@Url.Action("GetAll", "Usuario")"> Regresar</a>
        </div>
        @*@Html.ActionLink("Editar", "Form", new { IdUsuario = Model.IdUsuario }) |
            @Html.ActionLink("Back to List", "GetAll")*@
    </p>
</div>