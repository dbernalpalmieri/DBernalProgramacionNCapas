        </div>
    </div>

    <div>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Nombre)*@
                        Nombre Completo
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Celular)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Curp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaNacimiento)
                    </th>
                    <th>
                        Rol
                        @*@Html.DisplayNameFor(model => model.Rol.Nombre)*@
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.IdUsuario)
                        </td>*@
                    <td>
                        @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.ApellidoPaterno) @Html.DisplayFor(model => model.ApellidoMaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Sexo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>*@
