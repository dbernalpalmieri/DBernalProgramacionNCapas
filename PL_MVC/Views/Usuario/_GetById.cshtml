@model ModelLayer.Usuario

@{
    ViewBag.Title = "Usuario Detalle";
}

<div class="container container-fluid">
    <h2>@ViewBag.Title</h2>

    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong>@ViewBag.Message</strong>
