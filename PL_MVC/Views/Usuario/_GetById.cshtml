                        @Html.DisplayFor(model => model.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Curp)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Rol.Nombre)
                    </td>
                    @*<td class="visually-hidden">
                            @Html.DisplayFor(modelItem => item.Rol.IdRol)
                        </td>*@
                    <td>
                        <div class="d-flex justify-content-center align-items-center">
                            <button onclick="location.href = '@Url.Action("Form","Usuario", new { IdUsuario = Model.IdUsuario })';"
                                    class="btn btn-warning me-2" title="Editar">
                                <i class="bi bi-pen"></i>
                            </button>
                            <a class="btn btn-danger bi bi-trash-fill" href="@Url.Action("Delete", "Usuario", new { IdUsuario = Model.IdUsuario })"
                               onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a>
                        </div>
                        @*Html.ActionLink("Ver", "Detalle", new { IdUsuario = item.IdUsuario }, new { @class = "btn btn-success" })  |*@
                        @*Html.ActionLink("Eliminar", "Delete", new { IdUsuario = item.IdUsuario }, new { @class = "btn btn-danger" }) *@
